<launch>

    <param name="/use_sim_time" value="true" />

    <include file="$(find larm)/launch/challenge-3.launch">
    </include>

    <!--===== MAP SERVER =====-->     
    <node name="map_server" pkg="map_server" type="map_server" args="$(find grp-violet)/map/map.yaml" />

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find grp-violet)/rviz/rviz_config_mapping.rviz" />

    <!--===== AMCL =====-->
    <node pkg="amcl" type="amcl" name="amcl" output="log">
    </node>

    <!--===== move_base =====-->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find grp-violet)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find grp-violet)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />   
        <rosparam file="$(find grp-violet)/param/local_costmap_params.yaml" command="load" />   
        <rosparam file="$(find grp-violet)/param/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find grp-violet)/param/dwa_local_planner_params.yaml" command="load" />
        <rosparam file="$(find grp-violet)/param/move_base_params.yaml" command="load" />
        <rosparam file="$(find grp-violet)/param/global_planner_params.yaml" command="load" />
        <rosparam file="$(find grp-violet)/param/navfn_global_planner_params.yaml" command="load" />
    </node>

</launch>
